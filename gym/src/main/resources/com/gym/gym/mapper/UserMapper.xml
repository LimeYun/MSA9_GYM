<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.gym.gym.mapper.UserMapper">



<resultMap id="UserMap" type="com.gym.gym.domain.Users">
    <id property="no" column="no"/>
    <result property="id" column="id"/>
    <result property="password" column="password"/>
    <result property="name" column="name"/>
    <result property="phone" column="phone"/>
    <result property="email" column="email" />
    <result property="birth" column="birth"/>
     <result property="createdAt" column="created_at" />
     <result property="updatedAt" column="updated_at" />




<collection property="authList" select="selectAuthList" column="no"
            javaType="list" ofType="com.car.ckauto.domain.users.UserAuth" ></collection>
            </resultMap>


            <resultMap id="authMap" type="UserAuth">
                <id property="no" column="auth_no"/>
                <result property="user_no" column="user_no"/>
                <result property="auth" column="auth" />
       
            </resultMap>


<select id="selectId" resultType="UserMap">
SELECT *
FROM user
WHERE id = #{id}

</select>

<select id="select" resultMap="UserMap">
SELECT *
FROM user
WHERE no = #{no}
</select>

<select id="selectAuthList" resultType="UserAuth">
SELECT *
FROM user_auth
WHERE user_no = #{no}
</select>

<select id="list" resultMap="UserMap">
SELECT *
FROM users
</select>



<insert id="insert">
INSERT INTO user ( id, password, name, phone, gender, email, birth, enabled question, answer )
VALUES (#{id}, #{password} #{name}, #{phone}, #{gender}, #{email}, #{enabled}, #{birth}, #{question}, #{answer})
</insert>

  <insert id="insertAuth">
        INSERT INTO user_auth( user_no, auth )
        VALUES ( #{userNo}, #{auth} )
    </insert>

<update id="update">
UPDATE user
SET password = #{password}
    ,phone = #{phone}
    ,email = #{email}
    ,created_at = now()
    WHERE no = #{no}
</update>

<update id="updateAuth">
UPDATE user_auth
SET (#{auth})
WHERE user_no = #{userNo}
</update>

<delete id="delete">
DELETE FROM user
WHERE no = #{no}
</delete>

<delete id="deleteAuth">
DELETE FROM user_auth
WHERE user_no = #{userNo}
</delete>



</mapper>